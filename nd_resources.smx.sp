public void:OnLibraryAdded(String:name[])
{
	if (StrEqual(name, "updater", true))
	{
		Updater_AddPlugin("");
	}
	return void:0;
}

public void:OnPluginStart()
{
	RegAdminCmd("sm_checkresources", CheckResources, 16384, "Returns the current resources for both teams", "", 0);
	if (LibraryExists("updater"))
	{
		Updater_AddPlugin("");
	}
	return void:0;
}

public void:OnMapStart()
{
	g_iConsort = FindEntityByClassname(-1, "nd_team_consortium");
	g_iEmpire = FindEntityByClassname(-1, "nd_team_empire");
	return void:0;
}

public Action:CheckResources(client, args)
{
	ReplyToCommand(client, "Consort %d | Empire %d", getResources(2), getResources(3));
	return Action:3;
}

getResources(team)
{
	switch (team)
	{
		case 2:
		{
			return GetEntProp(g_iConsort, PropType:0, "m_iResourcePoints", 4, 0);
		}
		case 3:
		{
			return GetEntProp(g_iEmpire, PropType:0, "m_iResourcePoints", 4, 0);
		}
		default:
		{
			return -1;
		}
	}
}

public Native_GetResources(Handle:plugin, numParams)
{
	new team = GetNativeCell(1);
	new var1;
	if (team == 2)
	{
		var1 = getResources(2);
	}
	else
	{
		var1 = getResources(3);
	}
	return var1;
}

public APLRes:AskPluginLoad2(Handle:myself, bool:late, String:error[], err_max)
{
	CreateNative("GetResources", Native_GetResources);
	return APLRes:0;
}

