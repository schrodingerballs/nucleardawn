public void:OnPluginStart()
{
	sm_flood_time = CreateConVar("sm_flood_time", "0.75", "Amount of time allowed between chat messages", 0, false, 0.0, false, 0.0);
	return void:0;
}

public void:OnClientPutInServer(client)
{
	g_LastTime[client] = 0;
	g_FloodTokens[client] = 0;
	return void:0;
}

public bool:OnClientFloodCheck(client)
{
	max_chat = ConVar.FloatValue.get(sm_flood_time);
	new var1;
	if (max_chat <= 0.0 || CheckCommandAccess(client, "sm_flood_access", 16384, true))
	{
		return false;
	}
	if (g_LastTime[client] >= GetGameTime())
	{
		if (g_FloodTokens[client] >= 3)
		{
			return true;
		}
	}
	return false;
}

public void:OnClientFloodResult(client, bool:blocked)
{
	new var1;
	if (max_chat <= 0.0 || CheckCommandAccess(client, "sm_flood_access", 16384, true))
	{
		return void:0;
	}
	new Float:curTime = GetGameTime();
	new Float:newTime = curTime + max_chat;
	if (g_LastTime[client] >= curTime)
	{
		if (blocked)
		{
			newTime += 3.0;
		}
		else
		{
			if (g_FloodTokens[client] < 3)
			{
				g_FloodTokens[client]++;
			}
		}
	}
	else
	{
		if (0 < g_FloodTokens[client])
		{
			g_FloodTokens[client]--;
		}
	}
	g_LastTime[client] = newTime;
	return void:0;
}

